<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	version="2.4"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<display-name>Talool Webstite</display-name>

	<session-config>
		<session-timeout>120</session-timeout>
	</session-config>

	<filter>
		<filter-name>StaticFilter</filter-name>
		<filter-class>com.talool.website.filters.StaticResourceFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>StaticFilter</filter-name>
		<url-pattern>/css</url-pattern>
	</filter-mapping>
	
   <filter-mapping>
		<filter-name>StaticFilter</filter-name>
		<url-pattern>/css</url-pattern>
	</filter-mapping>


	<filter>
		<filter-name>hibernateFilter</filter-name>
		<filter-class>org.springframework.orm.hibernate3.support.OpenSessionInViewFilter</filter-class>
	</filter>
	
	
	<filter-mapping>
		<filter-name>hibernateFilter</filter-name>
		<url-pattern>/*</url-pattern>
		 <dispatcher>REQUEST</dispatcher>
    	<dispatcher>FORWARD</dispatcher>
	</filter-mapping>


	<filter>
		<filter-name>TaloolWebsite</filter-name>
		<filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
		<init-param>
			<param-name>applicationClassName</param-name>
			<param-value>com.talool.website.TaloolApplication</param-value>
		</init-param>
	</filter>


	<filter-mapping>
		<filter-name>TaloolWebsite</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<resource-ref>
		<description>postgreSQL DataSource</description>
		<res-ref-name>jdbc/postgres</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:applicationContext.xml</param-value>
	</context-param>

</web-app>